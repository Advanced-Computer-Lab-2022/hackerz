import React, {useEffect, useState, useRef} from 'react';
import CoursesList from './CoursesList';
const axios = require('axios').default;
const APIURL = "http://localhost:5000";
function Enter_password(props){
    const Passref = useRef();
    const ConfirmPassref = useRef();
    const id = props.id;
    const token= props.token;

    const changePaassword = async () => {
        const Pass = Passref.current.value;
        const confirmPass= ConfirmPassref.current.value;
        const response = await axios.post(APIURL + '/editInfo' + id + token, { new_password:Pass,confirm_new_password:confirmPass });
        alert(response);

        
      }
      function handleSubmit(e) {
        e.preventDefault();
       // console.log('You clicked submit.');
       changePaassword();
      }


    return(
        <form onSubmit={handleSubmit}>
        <label>
          New Password:
          <input className="m-1" ref={Passref} placeholder="New Password" type="password"/>
     
          Confirm password:
          <input className="m-1" ref={ConfirmPassref} placeholder="confirm password" type="password"/>
        </label>
        <input type="submit" value="Submit" />
      </form>
    );
}
export default Enter_password;